label-connected = %essid%

format-disconnected = %{A1:networkmanager_dmenu:}睊%{A}

[module/date]
type = internal/date
interval = 5
time = %H:%M
date = %A %d %B %Y
label =  %time%%{A} %{A}%{A3:gsimplecal & disown:}%date%

[module/pulseaudio]
